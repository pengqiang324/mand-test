
html, body, div, h2, p, h1, h2, h3, h4, input, span, a, textarea, button
    margin 0
    padding 0

input, textarea {
  border none
}

a {
  text-decoration none
}

.wrapper 
    height 100%

setPadding()
    padding-bottom 100px
    box-sizing border-box

img[lazy='loading'] {
  background-color #eee
}

.lazyload[lazy='loading'] {
  background-color #eee
  background-image url('../images/default_bg01.png') !important
  background-size cover
}
